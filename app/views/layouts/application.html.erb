<!DOCTYPE html>
<html>

<head>
  <title>MembersOnly</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="bg-gray">
  <% if flash[:notice] %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <p class="notice"><%= notice %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>
  <% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <p class="alert"><%= alert %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>

  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to "Members Only", root_path, class: "d-inline-block align-text-top text-light h3 text-decoration-none" %>


      <div>

        <% if member_signed_in? %>
        <%= link_to  edit_member_registration_path do %>
        <button type="button" class="btn btn-secondary rounded-pill mx-2 "><strong><%= current_member.username %></strong></button>
        <% end %>
        <%= link_to  destroy_member_session_path, method: :delete do %>
        <button type="button" class="btn btn-outline-secondary rounded-pill mx-2">log Out</button>
        <% end %>
        <% else %>
        <%= link_to  new_member_session_path do %>
        <button type="button" class="btn btn-outline-secondary rounded-pill mx-2">log in</button>
        <% end %>
        <%= link_to  new_member_registration_path, class: "button is-primary" do %>
        <button type="button" class="btn btn-secondary rounded-pill mx-2 ">Sign up</button>
        <% end %>
        <% end %>
      </div>


    </div>
  </nav>
  <%= yield %>
</body>

</html>